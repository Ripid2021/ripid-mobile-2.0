{
  "name": "ripid-staging",
  "version": "0.0.4",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:dev": "react-native run-android --variant=devDebug",
    "android:staging": "react-native run-android --variant=stagingDebug",
    "android:prod": "react-native run-android --variant=prodDebug",
    "gradlew:dev":"cd android && ./gradlew assembleDevRelease",
    "gradlew:staging":"cd android && ./gradlew assembleStagingRelease",
    "gradlew:prod":"cd android && ./gradlew assembleProdRelease",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "np": "np --no-publish",
    "postversion": "react-native-version"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.71.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.7",
    "np": "^7.6.3",
    "prettier": "^2.4.1",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyenkhavi/rn-github-cicd"
  }
